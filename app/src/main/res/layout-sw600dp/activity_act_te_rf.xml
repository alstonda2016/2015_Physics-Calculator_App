<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.ActTeRF"
    android:background="#212121"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:imeOptions = "actionDone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="τ = r * F"
        android:id="@+id/textView16"
        android:textSize="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#2196F3" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText16"
        android:hint="F"
        android:textSize="70dp"
        android:background="#424242"
        android:layout_below="@+id/editText17"
        android:layout_alignRight="@+id/button13"
        android:layout_alignEnd="@+id/button13"
        android:layout_marginTop="13dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText17"
        android:hint="r"
        android:textSize="70dp"
        android:background="#424242"
        android:layout_below="@+id/editText15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:imeOptions = "actionDone"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:text="Solve"
        android:id="@+id/button13"
        android:onClick="btnEntertone"
        android:background="#00E676"
        android:textColor="#ffffffff"
        android:textSize="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="131dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:text="Clear"
        android:id="@+id/button14"
        android:onClick="btnClearTERF"
        android:background="#2196F3"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/button13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="60dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText15"
        android:hint="τ "
        android:textSize="70dp"
        android:background="#424242"
        android:layout_below="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:imeOptions = "actionDone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="τ  ="
        android:id="@+id/textView68"
        android:textSize="70dp"
        android:layout_below="@+id/textView16"
        android:layout_alignRight="@+id/textView70"
        android:layout_alignEnd="@+id/textView70"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="r ="
        android:id="@+id/textView69"
        android:textSize="70dp"
        android:layout_alignTop="@+id/editText17"
        android:layout_alignRight="@+id/textView70"
        android:layout_alignEnd="@+id/textView70"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F ="
        android:id="@+id/textView70"
        android:textSize="70dp"
        android:layout_alignTop="@+id/editText16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="18dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
