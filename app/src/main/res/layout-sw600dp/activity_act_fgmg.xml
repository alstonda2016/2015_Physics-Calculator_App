<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.actFgmg"
    android:onClick="btnClearFGMG"
    android:background="#212121"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:imeOptions = "actionDone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fg = m * g"
        android:id="@+id/textView23"
        android:textSize="90dp"
        android:textColor="#2196F3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText22"
        android:hint="Fg"
        android:textSize="79dp"
        android:background="#424242"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView23"
        android:layout_alignRight="@+id/button19"
        android:layout_alignEnd="@+id/button19"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText23"
        android:hint="m"
        android:textSize="79dp"
        android:background="#424242"
        android:layout_below="@+id/editText22"
        android:layout_alignLeft="@+id/editText22"
        android:layout_alignStart="@+id/editText22"
        android:layout_marginTop="10dp"
        android:imeOptions = "actionDone"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:text="Solve"
        android:id="@+id/button19"
        android:layout_marginTop="114dp"
        android:onClick="btnEnterfgmf"
        android:background="#00E676"
        android:textSize="60dp"
        android:layout_below="@+id/editText23"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:text="Clear"
        android:id="@+id/button20"
        android:onClick="btnClearFGMG"
        android:layout_alignTop="@+id/button19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#2196F3"
        android:textSize="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fg ="
        android:id="@+id/textView43"
        android:textSize="79dp"
        android:layout_alignTop="@+id/editText22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m ="
        android:id="@+id/textView44"
        android:textSize="79dp"
        android:layout_below="@+id/editText22"
        android:layout_alignRight="@+id/textView43"
        android:layout_alignEnd="@+id/textView43"
        android:layout_marginTop="40dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>