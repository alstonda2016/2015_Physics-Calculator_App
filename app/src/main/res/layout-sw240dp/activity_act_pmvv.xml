<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.actPMVV"
    android:background="#212121"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:imeOptions = "actionDone">

    <TextView android:text="ΔP = m(V - Vo)" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textColor="#2196F3" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText79"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#424242"
        android:layout_marginTop="5dp"
        android:hint="ΔP "
        android:textSize="40dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText80"
        android:layout_below="@+id/editText79"
        android:layout_alignLeft="@+id/editText79"
        android:layout_alignStart="@+id/editText79"
        android:background="#424242"
        android:layout_marginTop="4dp"
        android:hint="m"
        android:textSize="40dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText81"
        android:layout_below="@+id/editText80"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#424242"
        android:layout_marginTop="4dp"
        android:hint="V"
        android:textSize="40dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText82"
        android:layout_below="@+id/editText81"
        android:layout_alignLeft="@+id/editText81"
        android:layout_alignStart="@+id/editText81"
        android:background="#424242"
        android:layout_marginTop="4dp"
        android:hint="Vo"
        android:textSize="40dp"
        android:imeOptions = "actionDone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m ="
        android:id="@+id/textView11"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText80"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΔP ="
        android:id="@+id/textView14"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText79"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V ="
        android:id="@+id/textView18"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText81"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vo ="
        android:id="@+id/textView19"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText82"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:id="@+id/button69"
        android:layout_below="@+id/editText82"
        android:layout_alignRight="@+id/editText82"
        android:layout_alignEnd="@+id/editText82"
        android:background="#00E676"
        android:textSize="30dp"
        android:layout_marginTop="7dp"
        android:onClick="btnEnterpmvv" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button70"
        android:layout_alignTop="@+id/button69"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:background="#2196F3"
        android:onClick="btnClearpmvv" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>