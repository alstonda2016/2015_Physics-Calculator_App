<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.actLinear"
    android:background="#212121"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:text="V = Vo + at"
        android:id="@+id/button"
        android:onClick="ActAevat"
        android:background="#424242"
        android:textColor="#2196F3"
        android:textSize="65dp"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/buttonxvt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:text="x = v * t"
        android:id="@+id/buttonxvt"
        android:onClick="ActXcVT"
        android:background="#424242"
        android:textColor="#2196F3"
        android:textSize="90dp"
        android:textAllCaps="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:id="@+id/button3"
        android:text="a= Î”v/t"
        android:onClick="ActAeVT"
        android:background="#424242"
        android:textColor="#2196F3"
        android:textSize="90dp"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:text="X = vt + Xo"
        android:id="@+id/button4"
        android:singleLine="false"
        android:onClick="ActAev4"
        android:background="#424242"
        android:textColor="#2196F3"
        android:textSize="60dp"
        android:textAllCaps="false"
        android:layout_below="@+id/buttonxvt"
        android:layout_alignLeft="@+id/buttonxvt"
        android:layout_alignStart="@+id/buttonxvt"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Linear Motion"
        android:id="@+id/textView2"
        android:textSize="115dp"
        android:textColor="#2196F3"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>