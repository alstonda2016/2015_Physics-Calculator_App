<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.ActXeVT"
    android:background="#212121"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:imeOptions = "actionDone">

    <EditText
        android:layout_width="220dp"
        android:layout_height="@dimen/n75"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="x"
        android:background="#424242"
        android:textSize="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/btnSolve"
        android:layout_alignEnd="@+id/btnSolve"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="@dimen/n75"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="v"
        android:background="#424242"
        android:textSize="40dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/btnSolve"
        android:layout_marginTop="8dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="@dimen/n75"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="t"
        android:background="#424242"
        android:textSize="40dp"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/btnSolve"
        android:layout_marginTop="8dp"
        android:imeOptions = "actionDone"/>

    <Button
        android:layout_width="@dimen/nnn120"
        android:layout_height="@dimen/n80"
        android:text="Solve"
        android:id="@+id/btnSolve"
        android:onClick="btnEnterLm1"
        android:layout_alignTop="@+id/button59"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00E676"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTest"
        android:layout_below="@+id/btnSolve"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:textSize="@dimen/n80" />

    <Button
        android:layout_width="@dimen/nnn120"
        android:layout_height="@dimen/n80"
        android:text="Clear"
        android:id="@+id/button59"
        android:onClick="btnClearLM1"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:background="#2196F3"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x = v * t"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="70dp"
        android:textColor="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x ="
        android:id="@+id/textView78"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v ="
        android:id="@+id/textView79"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/textView78"
        android:layout_alignStart="@+id/textView78"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="t ="
        android:id="@+id/textView80"
        android:textSize="40dp"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
