<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.actUKX"
    android:background="#212121"
    android:focusableInTouchMode="true"
    android:imeOptions = "actionDone">

    <TextView android:text="Us = (k * xÂ²)/2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView20"
        android:textColor="#2196F3" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText83"
        android:layout_below="@+id/textView20"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:hint="Us"
        android:background="#424242"
        android:textSize="50dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText84"
        android:layout_below="@+id/editText83"
        android:layout_alignRight="@+id/editText83"
        android:layout_alignEnd="@+id/editText83"
        android:hint="k"
        android:background="#424242"
        android:layout_marginTop="8dp"
        android:textSize="50dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText85"
        android:layout_below="@+id/editText84"
        android:layout_alignRight="@+id/editText84"
        android:layout_alignEnd="@+id/editText84"
        android:hint="x"
        android:background="#424242"
        android:layout_marginTop="8dp"
        android:textSize="50dp"
        android:imeOptions = "actionDone"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Solve"
        android:id="@+id/button71"
        android:onClick="btnEnterUKX"
        android:layout_below="@+id/editText85"
        android:layout_alignRight="@+id/editText85"
        android:layout_alignEnd="@+id/editText85"
        android:layout_marginTop="43dp"
        android:textSize="30dp"
        android:background="#00E676" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Clear"
        android:id="@+id/button72"
        android:layout_alignBottom="@+id/button71"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnClearUKX"
        android:textSize="30dp"
        android:background="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Us ="
        android:id="@+id/textView21"
        android:textSize="50dp"
        android:layout_alignTop="@+id/editText83"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="k ="
        android:id="@+id/textView84"
        android:textSize="50dp"
        android:layout_alignTop="@+id/editText84"
        android:layout_alignRight="@+id/textView21"
        android:layout_alignEnd="@+id/textView21"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x ="
        android:id="@+id/textView85"
        android:textSize="50dp"
        android:layout_alignTop="@+id/editText85"
        android:layout_alignLeft="@+id/textView84"
        android:layout_alignStart="@+id/textView84"
        android:layout_marginTop="4dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>