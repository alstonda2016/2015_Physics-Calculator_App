<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#212121">

    <Button
        android:layout_width="@dimen/n150"
        android:layout_height="100dp"
        android:text="Linear Motion"
        android:id="@+id/btnLinmot"
        android:onClick="actLinear"
        android:background="#2196F3"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btnGrav"
        android:layout_alignStart="@+id/btnGrav" />

    <Button
        android:layout_width="@dimen/n150"
        android:layout_height="100dp"
        android:text="Conversions"
        android:id="@+id/btnConvert"
        android:onClick="buttonOnClick"
        android:background="#00E676"
        android:singleLine="false"
        android:textColor="#ff000000"
        android:textSize="21dp"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/btnLinmot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/n150"
        android:layout_height="100dp"
        android:text="Torque"
        android:id="@+id/btnTorque"
        android:onClick="actTorque"
        android:background="#2196F3"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:layout_below="@+id/btnConvert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="@dimen/n150"
        android:layout_height="100dp"
        android:text="Gravity"
        android:id="@+id/btnGrav"
        android:onClick="actGrav"
        android:layout_alignTop="@+id/btnTorque"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:background="#00E676"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="@dimen/n150"
        android:layout_height="100dp"
        android:text="Power &amp; Work"
        android:id="@+id/button5"
        android:onClick="actWork"
        android:background="#2196F3"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="Others"
        android:id="@+id/button6"
        android:onClick="actOthers"
        android:background="#2196F3"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textColor="#FF000000"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/adView"
        android:layout_alignStart="@+id/adView"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="@dimen/n150"
        android:layout_height="100dp"
        android:text="Kinetic Energy"
        android:id="@+id/button7"
        android:onClick="actKinetic"
        android:background="#00E676"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:layout_below="@+id/btnTorque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy Physics Calculator"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:textSize="@dimen/n30"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
