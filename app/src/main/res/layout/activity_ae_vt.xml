<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.AeVT"
    android:background="#212121">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="a = Δv/t"
        android:id="@+id/textView9"
        android:textSize="80sp"
        android:textColor="#2196F3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="@dimen/n70"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="a"
        android:background="#424242"
        android:textSize="40sp"
        android:layout_above="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="@dimen/n70"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText6"
        android:hint="t"
        android:background="#424242"
        android:textSize="40sp"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="@dimen/nnn120"
        android:layout_height="@dimen/n80"
        android:text="Solve"
        android:id="@+id/btnEnter"
        android:onClick="btnEnter"
        android:background="#00E676"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="104dp"
        android:textSize="30sp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="@dimen/n70"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint=" Δv"
        android:background="#424242"
        android:textSize="40sp"
        android:layout_below="@+id/textView82"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="@dimen/nnn120"
        android:layout_height="@dimen/n80"
        android:text="Clear"
        android:id="@+id/button60"
        android:onClick="btnClearAEVT"
        android:layout_alignTop="@+id/btnEnter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#2196F3"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Δv ="
        android:id="@+id/textView81"
        android:textSize="40sp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a ="
        android:id="@+id/textView82"
        android:textSize="50sp"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView81"
        android:layout_alignEnd="@+id/textView81"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="t ="
        android:id="@+id/textView83"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignRight="@+id/textView82"
        android:layout_alignEnd="@+id/textView82"
        android:layout_marginBottom="5dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
