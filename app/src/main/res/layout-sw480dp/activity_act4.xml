<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.physbun.Act4"
    android:background="#212121"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:imeOptions = "actionDone"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X = vt + Xo"
        android:id="@+id/textView12"
        android:textSize="46dp"
        android:textColor="#2196F3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="93dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText11"
        android:background="#424242"
        android:hint="X"
        android:textSize="50dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/editText12"
        android:layout_alignStart="@+id/editText12"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="93dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText12"
        android:background="#424242"
        android:textSize="50dp"
        android:hint="V"
        android:layout_below="@+id/editText11"
        android:layout_alignLeft="@+id/editText13"
        android:layout_alignStart="@+id/editText13"
        android:layout_marginTop="8dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="93dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText13"
        android:hint="t"
        android:background="#424242"
        android:textSize="50dp"
        android:layout_below="@+id/editText12"
        android:layout_alignLeft="@+id/editText14"
        android:layout_alignStart="@+id/editText14"
        android:layout_marginTop="8dp"
        android:imeOptions = "actionDone"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="93dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText14"
        android:hint="Xo "
        android:background="#424242"
        android:textSize="50dp"
        android:layout_below="@+id/editText13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:imeOptions = "actionDone"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:text="Solve"
        android:id="@+id/button9"
        android:onClick="btnEnterC"
        android:background="#00E676"
        android:textSize="50dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/editText14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:text="Clear"
        android:id="@+id/button10"
        android:onClick="btnClearAct4"
        android:background="#2196F3"
        android:textSize="50dp"
        android:layout_alignTop="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X ="
        android:id="@+id/textView5"
        android:textSize="50dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/editText11"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V ="
        android:id="@+id/textView6"
        android:textSize="50dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/editText12"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="t ="
        android:id="@+id/textView7"
        android:textSize="50dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/editText13"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xo ="
        android:id="@+id/textView8"
        android:textSize="50dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/editText14"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="14dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
